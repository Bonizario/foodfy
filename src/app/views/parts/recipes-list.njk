{% macro list(mostAccessed) %}
<section class="recipes">
  {% if mostAccessed %}
  <h2>{{ mostAccessed }}</h2>
  {% endif %}
  <div class="recipes-grid">
    <div class="recipe" id="burger">
      <img src="/images/burger.png" alt="Triplo bacon burger">
      <h3>Triplo bacon burger</h3>
      <p>por Jorge Relato</p>
    </div>
    <div class="recipe" id="pizza">
      <img src="/images/pizza.png" alt="Pizza 4 estações">
      <h3>Pizza 4 estações</h3>
      <p>por Fabiana Melo</p>
    </div>
    <div class="recipe" id="espaguete">
      <img src="/images/espaguete.png" alt="Espaguete ao alho">
      <h3>Espaguete ao alho</h3>
      <p>por Júlia Kinoto</p>
    </div>
    <div class="recipe" id="lasanha">
      <img src="/images/lasanha.png" alt="Lasanha mac n' cheese">
      <h3>Lasanha mac n' cheese</h3>
      <p>por Juliano Vieira</p>
    </div>
    <div class="recipe" id="doce">
      <img src="/images/doce.png" alt="Docinhos pão-do-céu">
      <h3>Docinhos pão-do-céu</h3>
      <p>por Ricardo Golvea</p>
    </div>
    <div class="recipe" id="asinhas">
      <img src="/images/asinhas.png" alt="Asinhas de frango ao barbacue">
      <h3>Asinhas de frango ao barbacue</h3>
      <p>por Vania Steroski</p>
    </div>
  </div>
</section>
{% endmacro %}